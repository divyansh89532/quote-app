<body>
    <div class="container">
        <div class="row">
            <h1 class="display-3 text-center">Publish New Quote</h1>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <form id="newquote" action="/new-quote" method="POST">
                <div class="mb-3">
                  <label for="author" class="form-label">Author :</label>
                  <input type="text" class="form-control" id="author" name = "author" placeholder="Author's Name">
                </div>
                <label for="quote" class="form-label">Quote :</label>
                <div class="form-floating mb-3">
                    <textarea class="form-control" placeholder="Write Your Quote Here" id="quote" style="height: 120px" name="quote"></textarea>
                    <label for="quote">Quote</label>
                  </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>     
        </div>
    </div>
</body>
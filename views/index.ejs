<body>
    <div class="container">
        <div class="row">
            <h1 class="display-3 text-center">All Quotes</h1>
        </div>
    </div>

    <div class="container">
        <div class="row" id="display-row">
            <% data.forEach(quote => { %>
                <div class="card">
                    <div class="card-header">
                        Quote By <%= quote.author %> 
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p><%= quote.quote.substring(1,100) %> </p>
                            <footer class="blockquote-footer"><%= quote.author %></footer>
                            <div class="card-btn">
                                <a href="/details/<%= quote._id %>"><div class="btn btn-primary">Get Quote</div></a>
                            </div>
                        </blockquote>
                    </div>
    
                </div>
             
            <% }) %>


        </div>
    </div>
</body>

</html>